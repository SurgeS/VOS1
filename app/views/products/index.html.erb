<%provide(:title, '| Produkty')%>
<h1>Produkty</h1>

<div>
  <%= form_tag shoplist_products_path, method: :get do %>
      <div class="pull-right">
        <%= text_field_tag :search, params[:search], placeholder: 'Hľadať konkrétny produkt', type: :search %>
        <%= submit_tag 'Hľadať', class: 'btn btn-default' %>
      </div>
  <% end %>
</div>
<br>
<div><%= will_paginate %></div>

<div>
  <table>
    <%= render partial: "product", collection: @products, locals: { shoplist: @shoplist }%>
  </table>
</div>

<%= will_paginate %>

  <br>
<div><h5 class="pull-right">Vybraný zoznam: <%= link_to @shoplist.name, shoplists_path, class: "btn btn-default"%></h5></div>

